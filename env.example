# WhatsApp Bot Service - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=production

# =============================================================================
# WHATSAPP API CONFIGURATION
# =============================================================================
WHATSAPP_BASE_URL=https://your-whatsapp-api.com
WHATSAPP_API_USER=your-username
WHATSAPP_API_PASSWORD=your-password
CHAT_JID=your-group-jid@g.us
DEVICE_ID=your-device-id

# =============================================================================
# LLM CONFIGURATION (OpenAI / LiteLLM)
# =============================================================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# =============================================================================
# BOT SETTINGS
# =============================================================================
# How often to poll for new messages (in seconds)
POLL_INTERVAL=5

# Database path for message tracking
# For local development: messages.db (relative path)
# For Docker/production: /data/messages.db (mounted volume)
DB_PATH=messages.db

# =============================================================================
# SECURITY (Optional)
# =============================================================================
# Uncomment and set these for additional security
# API_KEY=your-secret-api-key-for-dashboard
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# MONITORING (Optional)
# =============================================================================
# Enable Prometheus metrics endpoint
# ENABLE_METRICS=true
# METRICS_PORT=9090

